<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/primary"
    tools:context=".fragments.welcome.WelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/welcome_linear_padding"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="@dimen/tv_title_1_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EPHARMA"
            android:textSize="@dimen/tv_title_1_size"
            android:padding="0dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="@dimen/tv_title_3_width"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="@dimen/tv_welcome_marginTop"
            android:textSize="@dimen/tv_title_3_size"
            android:textStyle="bold"
            android:text="Welcome"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="@dimen/tv_title_3_width"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="@dimen/tv_text_marginTop"
            android:textSize="@dimen/tv_title_3_size"
            android:text="lorem ipsum lorem ipsum lorem ipsum\nlorem ipsum lorem"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/btn_welcome_marginTop"
            android:background="@drawable/button_radius_primary_color"
            android:text="GET STARTED >"
            android:textStyle="bold"
            android:textSize="@dimen/tv_title_3_size"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/second"/>
    </LinearLayout>
</RelativeLayout>